<%- include('partials/header.ejs')%>
<%- include('partials/homeNavbar.ejs')%>
<body>
    <div class="jumbotron">
        <h1 class="display-4">Bem vindo!</h1>
        <p class="lead">Blog criado com a intenção de aprender CRUD, autenticação com hash, sessions, cookies e tinyMCE.</p>
        <hr class="my-4">
    </div>
    <div class="container">
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%=article.title%></h2>
                </div>
                <div class="card-body">
                    <a  href="/<%=article.slug %>"class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% })%>
        
        <% if(!filtred) { %>
            <div class="row">
   
                <div class="col">
                    <a style="float: right;" href="/articles/page/2">Next >>></a>
                </div>
                <hr>
            </div>
        <% } %>

        <hr>
    </div>
</body>
<%- include('partials/footer.ejs')%>